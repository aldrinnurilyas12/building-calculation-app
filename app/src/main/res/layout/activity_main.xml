<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.example.buildspace_app.com.example.awandaintan_1912510699.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Selamat datang" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#222222"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins"
        android:text="Ayo hitung luas bangun ruang" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:onClick="panjang"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Persegi Panjang"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/persegipanjang"></ImageView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:onClick="segitiga"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Segitiga"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/segitiga">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:onClick="bujur"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Bujur Sangkar"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/bujur"></ImageView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:onClick="lingkaran"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Lingkaran"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/lingkaran">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_weight="1"
            android:onClick="jajar"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Jajar genjang"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/genjang"></ImageView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_weight="1"
            android:onClick="trapesium"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Trapesium"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-28dp"
                    android:src="@drawable/trapesium">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>